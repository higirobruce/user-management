<mjml>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-text font-size="20px" color="#F45E43" font-family="helvetica">New Comment on Action</mj-text>
        <mj-divider border-color="#F45E43"></mj-divider>
        <mj-text font-size="16px" font-family="helvetica">An action you are involved with has received a new comment.</mj-text>
        <mj-text font-size="16px" font-family="helvetica"><b>Action Title:</b> {{actionTitle}}</mj-text>
        <mj-text font-size="16px" font-family="helvetica"><b>Action Description:</b> {{actionDescription}}</mj-text>
        <mj-text font-size="16px" font-family="helvetica"><b>Commented by:</b> {{commenterName}}</mj-text>
        <mj-text font-size="16px" font-family="helvetica"><b>Comment:</b></mj-text>
        <mj-text font-size="16px" font-family="helvetica">"{{commentContent}}"</mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>